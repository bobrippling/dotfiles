#!/usr/bin/perl
use warnings;

sub usage
{
	die "Usage: $0 [-n]\n"
}

usage() if @ARGV > 1;

$n = 0;

if(@ARGV){
	if($ARGV[0] eq '-n'){
		$n = 1;
	}else{
		usage();
	}
}

while(<DATA>){
	s/ //g;
	next if /^#/;
	if($n){
		print;
	}else{
		chomp;
		system("synclient $_") and warn "setting $_ failed\n";
	}
}

