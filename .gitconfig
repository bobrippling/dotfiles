[core]
	pager = less -F -X

[alias]
	ci = commit
	di = diff --ws-error-highlight=all
	co = checkout
	st = status -sb
	t = status -sb
	lg = log --graph --pretty=format:'%C(auto,red)%h%C(auto,reset) -%C(auto,yellow)%d%C(auto,reset) %s %C(auto,bold blue)<%ae>%C(auto,reset)'
	ll = log --oneline
	lauth = log --graph --pretty=format:'%h %an <%ae> %s'
	amend = commit --amend
	adp = add -p
	adu = add -u
	dic = diff --cached
	rbc = rebase --con
	rbi = rebase -i
	c-p = cherry-pick
	smu = submodule update
	ff = merge --ff-only
	standup = log --all --since=1.day --committer=Pilling

[grep]
	extendedRegexp = yes

[color]
	ui = true

[interactive]
	singlekey = true

[rerere]
	enabled = true

[rebase]
	autosquash = true

[diff]
	renames = copies
	mnemonicprefix = true

[diff "bin"]
	textconv = hexdump -v -C

[merge]
	defaultToUpstream = true

[advice]
	pushUpdateRejected = false
	pushNonFFCurrent = false
	pushNonFFDefault = false
	pushNonFFMatching = false
	pushAlreadyExists = false
	pushFetchFirst = false
	pushNeedsForce = false
	statusHints = false
	commitBeforeMerge = false
	resolveConflict = false
	detachedHead = false

[push]
	default = nothing
