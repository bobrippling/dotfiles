__loadagent(){
	proc_name="$1"
	agent_file="$2"

	if pgrep -x "$proc_name" >/dev/null
	then
		if test -f "$agent_file"
		then
			. "$agent_file"
			return 0
		else
			echo >&2 "$0: environ: no such file \"$agent_file\""
			return 1
		fi
	else
		echo >&2 "$0: environ: \"$proc_name\" not running"
		return 1
	fi
}

if test -z "$SSH_AUTH_SOCK" && __loadagent ssh-agent "$HOME/.ssh/env_agent"
then
	nssh=$(ssh-add -l | grep '^[0-9]' | wc -l)
	if test $nssh -eq 0
	then echo >&2 "$0: environ: no ssh identities"
	fi
fi

__loadagent gpg-agent "$HOME/.ssh/gpg_env_agent"

if test -t 0
then
	# bobrippling/z
	if test -e ~/src/z/z.sh
	then
		_Z_NO_RESOLVE_SYMLINKS=1
		. ~/src/z/z.sh
	else
		echo >&2 "$0: environ: no z.sh"
	fi
else
	echo >&2 "$0: environ: skipping z.sh init"
fi
